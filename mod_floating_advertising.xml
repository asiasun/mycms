<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
  <name>mod_floating_advertising</name>
  <author>fyousefi</author>
  <creationDate>April 2020</creationDate>
  <copyright>Copyright (C) 2005 AsiaSun.ir All rights reserved.</copyright>
  <license>Creative Commons Zero v1.0 Universal</license>
  <authorEmail>support[[@]]asiasun.[[ir]]</authorEmail>
  <authorUrl>www.asiasun.ir</authorUrl>
  <version>1.0.0</version>
  <description>MOD_FLOATING_ADVERTISING_XML_DESCRIPTION</description>
  
  <files>
    <filename module="mod_floating_advertising">mod_floating_advertising.php</filename>
    <folder>tmpl</folder>
  </files>
  
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.mod_floating_advertising.ini<language>
    <language tag="en-GB">en-GB/</language>
  </languages>
  
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="" type="" label="" />
        <field
               name="banner_type"
               type="radio"
               label=""
               description=""
               class="btn-group btn-group-yesno"
               default="0"
               filter="integer"
        >
          <option value="1">JYES</option>
          <option vlaue="0">JNO</option>
        </field>
        <field
               name="banner_script"
               type="textarea"
               label="Script"
               description=""
               rows="2"
               filter="raw"
               showon="banner_type:1"
        />
        <field
               name="banner_image"
               type="media"
               label="Image"
               directory="banners"
               showon="banner_type:0"
        />
        <field 
               name="banner_link"
               type="url"
               label="Link"
               size="10"
               validate="url"
               showon="banner_type:0"        
        />
        <field
               name="device_type"
               type="checkboxes"
               label="Device Type"
               description="Select which device can show banner"
        >
          <option value="phone">Phone</option>
          <option value="tablet">Tablet</option>
        </field>
      </fieldset>
      <fieldset name="options" label="">
        <field
               name="prepare_content"
               type="radio"
               label=""
               description=""
               class="btn-group btn-group-yesno"
               default="0"
               filter="integer"
               >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field
               name="backgroundimage"
               type="media"
               label="MOD_FLOATING_AD_FIELD_BACKGROUNDIMAGE_LABEL"
               description="MOD_BACKGROUNDIMAGE_FIELD_LOGO_DESC"
               >
        <field />
      </fieldset>
      <fieldset name="advanced">
        <field
               name="layout"
               type="modulelayout"
               label="JFIELD_ALT_LAYOUT_LABEL"
               description="JFIELD_ALT_MODULE_LAYOUT_DESC"
        />
        
        <field
               name="moduleclass_sfx"
               type="textarea"
               label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
               description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
               rows="3"
        />
        
        <field
              name="cache"
              type="list"
              label="COM_MODULES_FIELD_CACHING_LABEL"
              description="COM_MODULES_FIELD_CACHING_DESC"
              default="1"
              filter="integer"
               >
          <option value="1">JGLOBAL_USE_GLOBAL</option>
          <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        </field>
        
        <field
              name="cache_time"
              type="number"
              label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
              description="COM_MODULES_FIELD_CACHE_TIME_DESC"
              default="900"
              filter="integer"
        />
        
        <field
              name="cachemode"
              type="hidden"
              default="static"
              >
          <option value="static"></option>
        </field> 
      </fieldset>
    </fields>
  </config>
  
</extension>
